# Server Configuration
PORT=8000
NODE_ENV=development

# Database (Supabase PostgreSQL)
# Connect via connection pooling
DATABASE_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres?pgbouncer=true"
# Direct connection for migrations
DIRECT_URL="postgresql://postgres.[PROJECT-REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres"

# Supabase Configuration
# Found in: Supabase Dashboard → Settings → API
SUPABASE_URL="https://[PROJECT-REF].supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
# Found in: Supabase Dashboard → Settings → API → JWT Secret
SUPABASE_JWT_SECRET="your-jwt-secret-min-32-chars"

# OAuth Configuration
# Backend URL (used for OAuth callback, e.g., https://api.yourapp.com)
BACKEND_URL="http://localhost:8000"
# App Deep Link Scheme (for mobile app redirect after OAuth)
APP_SCHEME="katoapp"

# CORS (optional - defaults to allow all in development)
FRONTEND_URL="https://your-frontend-url.com"

# Rate Limiting (optional - has sensible defaults)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
